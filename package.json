{
  "name": "oncheckin-gundb",
  "version": "1.0.0",
  "description": "OnCheckIn that is offline friendly.",
  "main": "index.js",
  "scripts": {
    "build": "snowpack build",
    "start": "snowpack dev & npm run start-pub",
    "start-pub": "earthstar-pub --discoverable --sqlite --dataFolder ./data --title OnCheckIn --notes 'Blooming Fools H3'",
    "test": "standard"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/basham/oncheckin-gundb.git"
  },
  "author": "Chris Basham <chris@bash.am>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/basham/oncheckin-gundb/issues"
  },
  "homepage": "https://github.com/basham/oncheckin-gundb#readme",
  "devDependencies": {
    "@snowpack/plugin-svelte": "3.7.0",
    "earthstar-pub": "6.0.5",
    "snowpack": "3.8.8",
    "standard": "16.0.3"
  },
  "dependencies": {
    "date-fns": "2.23.0",
    "earthstar": "6.8.5",
    "gun": "0.2020.1234",
    "svelte": "3.42.5"
  },
  "snowpack": {
    "mount": {
      "src": "/"
    },
    "optimize": {
      "minify": true
    },
    "plugins": [
      "@snowpack/plugin-svelte"
    ]
  }
}
